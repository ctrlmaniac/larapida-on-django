{
    "name": "root",
    "private": true,
    "workspaces": [
        "clients/*"
    ],
    "scripts": {
        "start:www": "yarn workspace www run start",
        "build": "yarn workspaces run build",
        "collectclients": "bash collectclients.sh",
        "precollectclients": "yarn run build",
        "postcollectclients": "git add -A && git commit -m 'collected clients' && git push",
        "runserver": "poetry run python webapp/manage.py runserver --settings=webapp.development",
        "migrate": "poetry run python webapp/manage.py migrate --settings=webapp.development",
        "createsuperuser": "poetry run python webapp/manage.py createsuperuser --settings=webapp.development",
        "makemigrations": "poetry run python webapp/manage.py makemigrations --settings=webapp.development",
        "shell": "poetry run python webapp/manage.py shell --settings=webapp.development"
    },
    "devDependencies": {
        "lerna": "^5.5.0"
    }
}
