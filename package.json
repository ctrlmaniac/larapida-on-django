{
    "name": "root",
    "private": true,
    "workspaces": [
        "clients/*"
    ],
    "scripts": {
        "build": "yarn workspaces run build",
        "collectclients": "bash collectclients.sh",
        "precollectclients": "yarn run build",
        "postcollectclients": "git add -A && git commit -m 'collected clients' && git push",
        "runserver": "docker compose up --build",
        "migrate": "docker exec -it larapida-webapp .venv/bin/python webapp/manage.py migrate",
        "createsuperuser": "docker exec -it larapida-webapp .venv/bin/python webapp/manage.py createsuperuser"
    },
    "devDependencies": {
        "lerna": "^5.5.0"
    }
}
